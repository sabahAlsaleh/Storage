@model IEnumerable<Storage.Models.ProductViewModel>

@{
    ViewData["Title"] = "ProductInventory";
}

<h1>ProductInventory</h1>
<form asp-action="FilterByCategory" method="get" class="form-inline mb-3">
    <div class="form-group">
        <label for="category" class="mr-2">Category:</label>
        <input type="text" id="category" name="category" class="form-control mr-2" placeholder="Enter category" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryValue)
            </td>
           
        </tr>
}
    </tbody>
</table>
